extends layout

block container
  .search
    .ui.action.input
      input(type="text", placeholder="搜索")
      button.ui.button.red 搜索
  .section
    .ui.grid
      .three.wide.column
        .ui.secondary.vertical.pointing.menu.red(style="width: 100%")
          a.item.active 首页
          a.item 手机、数码、通信
          a.item 电脑、办公
          a.item 家居、家具、家装
          a.item 男装、女装、内衣
          a.item 鞋靴、箱包、钟表
          a.item 食品、酒类、生鲜
          a.item 图书、音像
      .nine.wide.column
        .flexslider
          ul.slides
            li
              img(src="http://gtms03.alicdn.com/tps/i3/TB1XDslIpXXXXagXFXXvKyzTVXX-520-280.jpg")
            li
              img(src="http://i.mmcdn.cn/simba/img/TB1jikYHpXXXXbVXpXXSutbFXXX.jpg")
            li
              img(src="http://i.mmcdn.cn/simba/img/TB1_shcHFXXXXXyXpXXSutbFXXX.jpg")
      .four.wide.column
        .ui.top.attached.tabular.menu
          .item.active(data-tab="phone") 电话充值
          .item(data-tab="game") 游戏充值
        .ui.tab.active(data-tab="phone")
          .ui.form.tab-container
            .field
              label 手机号码
              input(type="text")
            .ui.submit.button.red 充值
        .ui.tab(data-tab="game")
          .ui.form.tab-container
            .field
              label 游戏名称
              select.ui.dropdown
                option(value="lol") 英雄联盟
                option(value="qqt") QQ 堂
                option(value="csol") CSOL
            .field
              label 账号
              input(type="text")
            .ui.submit.button.red 充值

  .section#book-section
    h2 推荐书籍
    .ui.six.column.grid.ui.special.cards
      - for (var i = 0; i<10; i++)
        .column
          .ui.fluid.card
            .blurring.dimmable.image
              .ui.dimmer
                .content
                  .center
                    a.ui.inverted.button.red(href="/detail.html") 详情
              img(src="/static/images/faust.jpeg")
            .content
              a.header Faust
              .meta
                span.date Goethe
            .extra.content
              a 12 元
